<UserControl x:Class="WpfCronExpressionUI.WpfCronExpressionUIView"
             x:Name="WpfCronExpressionUiViewInstance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:WpfCronExpressionUI.ViewModel"
             Loaded="WpfCronExpressionUIView_OnLoaded"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid x:Name="Grid">
        <Grid.DataContext>
            <viewModel:ViewModel />
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl x:Name="TabControl" Grid.Row="0" Style="{Binding TabControlStyle, ElementName=WpfCronExpressionUiViewInstance}">
            <TabControl.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </TabControl.Resources>
            <TabItem x:Name="TabItemYear" Header="Year" Style="{Binding TabItemStyle, ElementName=WpfCronExpressionUiViewInstance}" IsSelected="True"
                     Visibility="{Binding ShowYearTab, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition SharedSizeGroup="YearRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="YearRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="YearRows" Height="Auto" />
                            <RowDefinition Height="Auto" MaxHeight="{Binding MaxHeightYearRange, ElementName=WpfCronExpressionUiViewInstance}" />
                            <RowDefinition SharedSizeGroup="YearRows" Height="Auto" />
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Row="0" IsChecked="{Binding AnyYear, Mode=TwoWay}" GroupName="YearGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}">
                            <TextBlock Text="Any Year" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="1" IsChecked="{Binding EveryXYears, Mode=TwoWay}" GroupName="YearGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowYearsEveryXYears, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXYearsSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXYearsItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXYears}" IsHitTestVisible="{Binding EveryXYears}" Focusable="{Binding EveryXYears}"/>
                                <TextBlock Text="Year(s) starting in" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXYearsStartInSelectedItem, Mode=TwoWay}" ItemsSource="{Binding YearRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXYears}" IsHitTestVisible="{Binding EveryXYears}" Focusable="{Binding EveryXYears}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="SpecificYears" Grid.Row="2" IsChecked="{Binding SpecificYears, Mode=TwoWay}" GroupName="YearGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowYearsSpecificYears, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Specific Years" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <ScrollViewer Grid.Row="3" Margin="30,0,0,10" MaxHeight="{Binding MaxHeightYearRange, ElementName=WpfCronExpressionUiViewInstance}"
                                      Visibility="{Binding ShowYearsSpecificYears, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding YearRangeCheckedItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="6" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Description}" IsChecked="{Binding IsChecked}" Margin="4"
                                                  Style="{Binding CheckboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                                  IsEnabled="{Binding IsChecked, ElementName=SpecificYears}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <RadioButton Grid.Row="4" IsChecked="{Binding YearRange, Mode=TwoWay}" GroupName="YearGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowYearsYearRange, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every year between" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding YearRangeStartSelectedItem, Mode=TwoWay}" ItemsSource="{Binding YearRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding YearRange}" IsHitTestVisible="{Binding YearRange}" Focusable="{Binding YearRange}"/>
                                <TextBlock Text="and" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding YearRangeEndSelectedItem, Mode=TwoWay}" ItemsSource="{Binding YearRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding YearRange}" IsHitTestVisible="{Binding YearRange}" Focusable="{Binding YearRange}"/>
                            </StackPanel>
                        </RadioButton>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="TabItemMonth" Header="Month" Style="{Binding TabItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                     Visibility="{Binding ShowMonthTab, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition SharedSizeGroup="MonthRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="MonthRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="MonthRows" Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition SharedSizeGroup="MonthRows" Height="Auto" />
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Row="0" IsChecked="{Binding AnyMonth, Mode=TwoWay}" GroupName="MonthGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}">
                            <TextBlock Text="Any Month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="1" IsChecked="{Binding EveryXMonths, Mode=TwoWay}" GroupName="MonthGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowMonthsEveryXMonths, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXMonthsSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXMonthsItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXMonths}" IsHitTestVisible="{Binding EveryXMonths}" Focusable="{Binding EveryXMonths}"/>
                                <TextBlock Text="Month(s) starting in" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXMonthsStartInSelectedItem, Mode=TwoWay}" ItemsSource="{Binding MonthRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXMonths}" IsHitTestVisible="{Binding EveryXMonths}" Focusable="{Binding EveryXMonths}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="SpecificMonths" Grid.Row="2" IsChecked="{Binding SpecificMonths, Mode=TwoWay}" GroupName="MonthGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowMonthsSpecificMonths, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Specific Months" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <ItemsControl ItemsSource="{Binding MonthRangeCheckedItems}" Grid.Row="3" Margin="30,0,0,10"
                                      Visibility="{Binding ShowMonthsSpecificMonths, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Description}" IsChecked="{Binding IsChecked}" Margin="4"
                                              Style="{Binding CheckboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                              IsEnabled="{Binding IsChecked, ElementName=SpecificMonths}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <RadioButton Grid.Row="4" IsChecked="{Binding MonthRange, Mode=TwoWay}" GroupName="MonthGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowMonthsMonthRange, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every month between" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding MonthRangeStartSelectedItem, Mode=TwoWay}" ItemsSource="{Binding MonthRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding MonthRange}" IsHitTestVisible="{Binding MonthRange}" Focusable="{Binding MonthRange}"/>
                                <TextBlock Text="and" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding MonthRangeEndSelectedItem, Mode=TwoWay}" ItemsSource="{Binding MonthRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding MonthRange}" IsHitTestVisible="{Binding MonthRange}" Focusable="{Binding MonthRange}"/>
                            </StackPanel>
                        </RadioButton>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="TabItemDay" Header="Day" Style="{Binding TabItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                     Visibility="{Binding ShowDayTab, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26*"/>
                            <ColumnDefinition Width="54*"/>
                            <ColumnDefinition Width="80*"/>
                            <ColumnDefinition Width="187*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="DayRows" Height="Auto" />
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Row="0" IsChecked="{Binding AnyDay, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}" Grid.ColumnSpan="4">
                            <TextBlock Text="Any Day" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="1" IsChecked="{Binding EveryXWeekDays, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysEveryXWeekDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXWeekDaysSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXWeekDaysItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXWeekDays}" IsHitTestVisible="{Binding EveryXWeekDays}" Focusable="{Binding EveryXWeekDays}"/>
                                <TextBlock Text="Day(s) starting on" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXWeekDaysStartInSelectedItem, Mode=TwoWay}" ItemsSource="{Binding DayRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXWeekDays}" IsHitTestVisible="{Binding EveryXWeekDays}" Focusable="{Binding EveryXWeekDays}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Grid.Row="2" IsChecked="{Binding EveryXMonthDays, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysEveryXMonthDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXMonthDaysSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXMonthDaysItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXMonthDays}" IsHitTestVisible="{Binding EveryXMonthDays}" Focusable="{Binding EveryXMonthDays}"/>
                                <TextBlock Text="Day(s) starting on the" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXMonthDaysStartInSelectedItem, Mode=TwoWay}" ItemsSource="{Binding DayOfMonthRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXMonthDays}" IsHitTestVisible="{Binding EveryXMonthDays}" Focusable="{Binding EveryXMonthDays}"/>
                                <TextBlock Text="of the month." Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="SpecificDaysOfWeek" Grid.Row="3" IsChecked="{Binding SpecificDaysOfWeeks, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysSpecificDaysOfWeekDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <TextBlock Text="Specific Day of Week" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <ItemsControl ItemsSource="{Binding DayOfWeekRangeCheckedItems}" Grid.Row="4" Margin="30,0,0,10"
                                      Visibility="{Binding ShowDaysSpecificDaysOfWeekDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Description}" IsChecked="{Binding IsChecked}" Margin="4"
                                              Style="{Binding CheckboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                              IsEnabled="{Binding IsChecked, ElementName=SpecificDaysOfWeek}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <RadioButton x:Name="SpecificDaysOfMonths" Grid.Row="5" IsChecked="{Binding SpecificDaysOfMonths, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysSpecificDaysOfMonthDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <TextBlock Text="Specific Day of Month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <ItemsControl ItemsSource="{Binding DayOfMonthRangeCheckedItems}" Grid.Row="6" Margin="30,0,0,10"
                                      Visibility="{Binding ShowDaysSpecificDaysOfMonthDays, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="11" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Description}" IsChecked="{Binding IsChecked}" Margin="4"
                                              Style="{Binding CheckboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                              IsEnabled="{Binding IsChecked, ElementName=SpecificDaysOfMonths}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <RadioButton Grid.Row="7" IsChecked="{Binding LastDayOfMonth, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysLastDayOfMonth, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <TextBlock Text="On the last day of the month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="8" IsChecked="{Binding LastWeekDayOfMonth, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysLastWeekDayOfMonth, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <TextBlock Text="On the last week day of the month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="9" IsChecked="{Binding LastXDayOfMonth, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysLastXDayOfMonth, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="On the last" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding LastXDayOfMonthSelectedItem, Mode=TwoWay}" ItemsSource="{Binding DayRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding LastXDayOfMonth}" IsHitTestVisible="{Binding LastXDayOfMonth}" Focusable="{Binding LastXDayOfMonth}"/>
                                <TextBlock Text="of the month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Grid.Row="10" IsChecked="{Binding DaysBeforeEndOfMonth, Mode=TwoWay}" GroupName="DayGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowDaysDaysBeforeEndOfMonth, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="4">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox SelectedItem="{Binding DaysBeforeEndOfMonthSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXMonthDaysItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding DaysBeforeEndOfMonth}" IsHitTestVisible="{Binding DaysBeforeEndOfMonth}" Focusable="{Binding DaysBeforeEndOfMonth}"/>
                                <TextBlock Text="day(s) before the end of the month" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                            </StackPanel>
                        </RadioButton>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="TabItemHour" Header="Hour" Style="{Binding TabItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                     Visibility="{Binding ShowHourTab, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition SharedSizeGroup="HourRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="HourRows" Height="Auto" />
                            <RowDefinition SharedSizeGroup="HourRows" Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition SharedSizeGroup="HourRows" Height="Auto" />
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Row="0" IsChecked="{Binding AnyHour, Mode=TwoWay}" GroupName="HourGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}">
                            <TextBlock Text="Any Hour" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <RadioButton Grid.Row="1" IsChecked="{Binding EveryXHours, Mode=TwoWay}" GroupName="HourGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowHoursEveryXHours, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Every" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXHoursSelectedItem, Mode=TwoWay}" ItemsSource="{Binding EveryXHoursItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXHours}" IsHitTestVisible="{Binding EveryXHours}" Focusable="{Binding EveryXHours}"/>
                                <TextBlock Text="Hour(s) starting in" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                                <ComboBox SelectedItem="{Binding EveryXHoursStartInSelectedItem, Mode=TwoWay}" ItemsSource="{Binding HourRangeItems}"
                                          ItemContainerStyle="{Binding ComboboxItemStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                          DisplayMemberPath="Description"
                                          Style="{Binding ComboboxStyle, ElementName=WpfCronExpressionUiViewInstance}" 
                                          IsEditable="{Binding EveryXHours}" IsHitTestVisible="{Binding EveryXHours}" Focusable="{Binding EveryXHours}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="SpecificHours" Grid.Row="2" IsChecked="{Binding SpecificHours, Mode=TwoWay}" GroupName="HourGroup" Margin="5" VerticalContentAlignment="Center"
                                     Style="{Binding RadioButtonStyle, ElementName=WpfCronExpressionUiViewInstance}"
                                     Visibility="{Binding ShowHoursSpecificHours, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Specific Hours" Margin="5,0" Style="{Binding TextBlockStyle, ElementName=WpfCronExpressionUiViewInstance}" />
                        </RadioButton>

                        <ItemsControl ItemsSource="{Binding HourRangeCheckedItems}" Grid.Row="3" Margin="30,0,0,10"
                                      Visibility="{Binding ShowHoursSpecificHours, ElementName=WpfCronExpressionUiViewInstance, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="6" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
